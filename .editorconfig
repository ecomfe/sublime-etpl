root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# When writing a snippet that contains indentation, always use tabs.
# When the snippet is inserted, the tabs will be transformed into
# spaces if the option translateTabsToSpaces is true.
[**.{tmLanguage,tmPreferences,sublime-snippet}]
indent_style = tab
indent_size = 4

[**.YAML-tmLanguage]
indent_style = space
indent_size = 2

[**.etpl]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
