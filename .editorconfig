root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[**.{tmLanguage,tmPreferences}]
indent_style = tab
indent_size = 4

[**.YAML-tmLanguage]
indent_style = space
indent_size = 2

[**.{etpl,sublime-snippet}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
